#!/bin/sh
#
#  (c) 2018-2022 m4r35n357@gmail.com (Ian Smith), for licencing see the LICENCE file
#

echo "Clean Numerical Simulation: [$*]" >&2

method=$1
threshold=$2
shift 2

. ./cns-functions.sh

case $method in
    'step2') original=$*
             halfstep $original
             $original >$fileB &
             wait;;
    'nosim') ;;  # compare user-supplied data or replot existing
          *) echo "CNS: Bad Method"; exit 1;;
esac

./divergence $fileA $fileB $threshold

./plotDiff.py $fileA $fileB $threshold 2>/dev/null &
