#!/bin/sh

# Copyright (c) 2018-2020, Ian Smith (m4r35n357)
# All rights reserved.
# For licencing see LICENCE file

WARNINGS='-pedantic -Wall -Wshadow -Wpointer-arith -Wcast-qual -Wstrict-prototypes -Wmissing-prototypes -Wextra'

CC='/usr/bin/c99'
if [ x"$1" = x'clang' ]
then
    CC='/usr/bin/clang'
fi

build () {
    name=$1
    ${CC} -O3 -DNDEBUG -o ${name}-dynamic ${name}.c taylor-ode.c -lmpfr -s
    ${CC} -O3 -DNDEBUG -static -o ${name}-static ${name}.c taylor-ode.c -lmpfr -lgmp -s
    ${CC} -O0 $WARNINGS -g -o ${name}-dbg ${name}.c taylor-ode.c -lmpfr
}

for model in \
tsm-double-pendulum \
tsm-lorenz \
tsm-rossler \
tsm-yu-wang \
tsm-genesio-tesi \
tsm-rucklidge \
tsm-halvorsen \
tsm-bouali \
tsm-rf \
tsm-wimol-banlue \
tsm-thomas \
tsm-sprott-minimal \
tsm-sprott-thomas \
tsm-sj \
tsm-lotka-volterra \
tsm-logistic \
tsm-constant
do
    build ${model} &
done

${CC} -O0 -Wall -g -o ad-test-dbg taylor-ode.c ad.c ad-test.c -lmpfr &
${CC} -O0 -Wall -g -o ad-test-newton-dbg taylor-ode.c ad.c ad-test-newton.c -lmpfr &

# export LD_LIBRARY_PATH='.'
# to compile and run against the shared library libtaylor.so:
# gcc -L. -Wall -o test tsm-lorenz.c -ltaylor -lmpfr -s
# ./test 16 10 .01 10000 -15.8 -17.48 35.64 10 28 8 3 >/tmp/data; echo "splot '/tmp/data' with lines" | gnuplot -p
#
${CC} -O0 -c $WARNINGS -g -fpic taylor-ode.c
${CC} -shared -o libtaylor.so taylor-ode.o

# to compile and run against the shared library libad.so:
# gcc -L. -Wall -o test ad-test.c -lad -ltaylor -lmpfr -s
# ./test 7 2 1
#
${CC} -O0 -c $WARNINGS -g -fpic ad.c
${CC} -shared -o libad.so ad.o

wait
ls -lh --color ad-test* tsm-* lib*.so

