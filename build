WARNINGS='-pedantic -Wall -Wshadow -Wpointer-arith -Wcast-qual -Wstrict-prototypes -Wmissing-prototypes -Wextra'

build () {
	name=$1
	c99 -O3 -DNDEBUG -o ${name} ${name}.c taylor-ode.c -lm -lmpfr -s
	c99 -O3 -DNDEBUG -static -o ${name}-static ${name}.c taylor-ode.c -lm -lmpfr -lgmp -s
	c99 -Og $WARNINGS -g -o ${name}-dbg ${name}.c taylor-ode.c -lm -lmpfr
	ls -lhrt --color ${name}*
}

c99 -Og -Wall -g -o ad-test-dbg taylor-ode.c ad.c ad-test.c -lm -lmpfr
c99 -Og -Wall -g -o ad-test-newton-dbg taylor-ode.c ad.c ad-test-newton.c -lm -lmpfr
ls -lhrt --color ad-test*
echo ""

for model in \
tsm-lorenz \
tsm-thomas \
tsm-sprott-thomas \
tsm-rossler \
tsm-halvorsen \
tsm-rf \
tsm-sj \
tsm-bouali \
tsm-rucklidge \
tsm-lotka-volterra \
tsm-logistic \
tsm-constant
do
	build ${model}
	echo ""
done

