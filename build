#WARNINGS='-pedantic -Wall -Wshadow -Wpointer-arith -Wcast-qual -Wstrict-prototypes -Wmissing-prototypes -Wextra'
WARNINGS='-Wall -Wshadow -Wpointer-arith -Wcast-qual -Wstrict-prototypes -Wmissing-prototypes -Wextra'

CC='/usr/bin/c99'
if [ x"$1" = x'clang' ]
then
	CC='/usr/bin/clang'
fi

build () {
	name=$1
	${CC} -O3 -DNDEBUG -o ${name} ${name}.c taylor-ode.o -lm -lmpfr -s
	${CC} -O3 -DNDEBUG -static -o ${name}-static ${name}.c taylor-ode.o -lm -lmpfr -lgmp -s
	${CC} -Og $WARNINGS -g -o ${name}-dbg ${name}.c taylor-ode-dbg.o -lm -lmpfr
	ls -lhrt --color ${name}*
}

${CC} -Og -Wall -g -o ad-test-dbg taylor-ode.c ad.c ad-test.c -lm -lmpfr
${CC} -Og -Wall -g -o ad-test-newton-dbg taylor-ode.c ad.c ad-test-newton.c -lm -lmpfr
ls -lhrt --color ad-test*
echo ""

${CC} -c -O3 -DNDEBUG -o taylor-ode.o taylor-ode.c
${CC} -c -Og $WARNINGS -g -o taylor-ode-dbg.o taylor-ode.c
for model in \
tsm-lorenz \
tsm-thomas \
tsm-sprott-thomas \
tsm-rossler \
tsm-halvorsen \
tsm-rf \
tsm-sj \
tsm-bouali \
tsm-rucklidge \
tsm-lotka-volterra \
tsm-logistic \
tsm-constant
do
	build ${model}
	echo ""
done

